<h2><%= @article.title %></h2>
<p><%= @article.body %> </p><br>
<%= link_to "Edit", edit_article_path(@article) %><br>
<br><%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "For real?"} %><br>
